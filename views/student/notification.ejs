<%- include("sidebar.ejs") %>
<!-- Content -->
<main class="w-full pt-10 px-4 sm:px-6 md:px-8 lg:pl-72">

    <div id="notifications-container">
      <% if (notif.length > 0) { %>
      <% notif.forEach(notif => { %>
        <div class="mb-4 p-4 border border-gray-200 rounded-lg bg-white shadow-md flex justify-between items-center">
              <div>
                <h2 class="text-xl font-semibold"><%= notif.judul %></h2>
                <p class="notification-meta text-sm text-gray-600">
                  <span class="font-medium"><%= formatDate(notif.tanggal) %></span> 
                </p>
              
                <p class="text-gray-700"><%= notif.isi %></p>
              </div>
            </div>
      <% }) %>
      <% } else { %>
        <div class="text-center">
          <h2 class="text-2xl font-bold text-gray-800">No Notifications</h2>
        </div>
      <% } %>
  
       
      </div>

</main>
<!-- End Content -->
<!-- ========== END MAIN CONTENT ========== -->
<script src="/preline.js"></script>
</body>
</html>
