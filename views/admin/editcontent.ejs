<%- include("sidebar.ejs") %>
<!-- Content -->
<main class="w-full pt-10 px-4 sm:px-6 md:px-8 lg:pl-72">
    <div class="bg-white border border-gray-200 rounded-xl shadow-sm">
        <div class="p-4 sm:p-7">
          <div class="text-center">
            <h2 class="block text-2xl font-bold text-gray-800">Add Subject Detail</h2>
          </div>
          <div class="mt-5">

            <form id="nim-form" action="/editDetail/<%= subtopic.id %>" method="post" enctype="multipart/form-data">
              <div class="grid gap-y-4">
                <div class="relative">
                  <label for="bpLama" class="block text-sm font-medium text-gray-700">Konten</label>
                  <textarea id="bpLama" name="content" class="py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" required></textarea>
                </div>
                <div class="relative">
                  <label for="file" class="block text-sm font-medium text-gray-700">File</label>
                  <input type="file" id="file" name="file" class="block w-full border border-gray-200 shadow-sm rounded-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none file:bg-gray-50 file:border-0 file:me-4 file:py-3 file:px-4" />
                </div>
                <div class="relative">
                  <label for="video" class="block text-sm font-medium text-gray-700">Video</label>
                  <input type="text" id="video" name="video" class="py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" />
                </div>
                <div class="relative">
                  <label for="photo" class="block text-sm font-medium text-gray-700">Photo</label>
                  <input type="file" id="photo" name="picture" class="block w-full border border-gray-200 shadow-sm rounded-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none file:bg-gray-50 file:border-0 file:me-4 file:py-3 file:px-4" />
                </div>
              </div>
              <div class="flex justify-end items-center gap-x-2 p-4 sm:px-7">
                <a type="button" href="/admin/material" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none" >Cancel</a>
                <button id="submitBtn" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-pirus text-white hover:bg-piruss disabled:opacity-50 disabled:pointer-events-none" type="submit">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
</main>
<!-- End Content -->
<!-- ========== END MAIN CONTENT ========== -->
<script src="/preline.js"></script>
</body>
</html>