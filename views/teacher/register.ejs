            <input id="af-submit-application-passowrd" type="password" class="py-2 px-3 pe-11 block w-full border border-gray-200 shadow-sm text-sm rounded-lg focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" name="password">
          </div>
          <!-- End Col -->
          <div class="sm:col-span-3">
            <label for="af-submit-application-repeat" class="inline-block text-sm font-medium text-gray-500 mt-2.5" >
              Repeat Password
            </label>
          </div>
          <!-- End Col -->

          
  
          <div class="sm:col-span-9">
            <input id="af-submit-application-repeat" type="password" class="py-2 px-3 pe-11 block w-full border border-gray-200 shadow-sm text-sm rounded-lg focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" name="passwordLagi">
          </div>
          <!-- End Col -->

          
          
       

